{
  "name": "@russellio/react-native-compass",
  "version": "0.1.0",
  "description": "A TypeScript-only React Native horizontal scrolling compass with real-time magnetometer integration",
  "source": "./src/index.tsx",
  "main": "./lib/commonjs/index.js",
  "module": "./lib/module/index.js",
  "types": "./lib/typescript/index.d.ts",
  "react-native": "./src/index.tsx",
  "exports": {
    ".": {
      "types": "./lib/typescript/index.d.ts",
      "import": "./lib/module/index.js",
      "require": "./lib/commonjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "src",
    "!**/__tests__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "compass",
    "magnetometer",
    "navigation",
    "heading",
    "sensor"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/russellio/react-native-compass.git"
  },
  "author": "Jon Russell <info@jonrussell.dev> (https://github.com/russellio)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/russellio/react-native-compass/issues"
  },
  "homepage": "https://github.com/russellio/react-native-compass#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "expo-sensors": "~15.0.8",
    "expo-system-ui": "^6.0.9",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-svg": "15.12.1",
    "react-native-worklets": "0.5.1"
  },
  "peerDependencies": {
    "react": ">=19",
    "react-native": ">=0.81"
  },
  "devDependencies": {
    "@react-native/eslint-config": "^0.76.0",
    "@react-native/typescript-config": "^0.76.0",
    "@types/react": "~19.1.10",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "react": "19.1.0",
    "react-native": "0.81.5",
    "react-native-builder-bob": "^0.30.0",
    "release-it": "^19.2.3",
    "typescript": "^5.3.0"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "commonjs",
        {
          "esm": false
        }
      ],
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.json"
        }
      ]
    ]
  },
  "create-react-native-library": {
    "type": "library",
    "languages": "typescript",
    "tools": [
      "eslint",
      "jest",
      "lefthook",
      "release-it"
    ],
    "version": "0.56.0"
  }
}
